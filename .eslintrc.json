{
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "mocha": true,
    "es6": true
  },
  "globals": {
    "err": true,
    "req": true,
    "res": true,
    "next": true,
    "beforeAll": true,
    "afterAll": true,
    "expect": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "module": true
    }
  },
  "rules": {
    "no-console": "off",
    "indent": [ "error", 2 ],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "comma-dangle": ["error", "always-multiline"],
    "semi": [ "error", "never" ],
    "no-unused-vars": ["error", { "args": "none" }]
  }
}
